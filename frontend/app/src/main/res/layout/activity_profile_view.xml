<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0F0B13"
    tools:context=".ProfileView">

    <TextView
        android:id="@+id/userProfileUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="133dp"
        android:layout_marginTop="19dp"
        android:fontFamily="sans-serif-black"
        android:text="USERNAME"
        android:textColor="#FFFFFF"
        android:textSize="32sp" />

    <ImageView
        android:id="@+id/userProfileImage"
        android:layout_width="95dp"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="18dp"
        android:background="#80FFFFFF"
        android:contentDescription="imageDesc"
        app:srcCompat="@drawable/blank_profile"
        tools:src="@drawable/blank_profile"
        tools:srcCompat="@drawable/blank_profile" />

    <TextView
        android:id="@+id/userProfileBio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="133dp"
        android:layout_marginTop="64dp"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="137dp"
        android:layout_marginTop="113dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radioUserPosts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:buttonTint="#BB5DC6"
            android:checked="true"
            android:fontFamily="sans-serif-black"
            android:text="User Posts"
            android:textColor="#FFFFFF" />

        <RadioButton
            android:id="@+id/radioUserInteractions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:buttonTint="#BB5DC6"
            android:fontFamily="sans-serif-black"
            android:text="User Interactions"
            android:textColor="#FFFFFF" />

    </RadioGroup>

    <Button
        android:id="@+id/userbtnFollow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="27dp"
        android:layout_marginTop="110dp"
        android:fontFamily="sans-serif-black"
        android:text="Follow" />

    <TextView
        android:id="@+id/mustLoginUserlineText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="364dp"
        android:fontFamily="sans-serif-thin"
        android:text=" "
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="30sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/userRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="504dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="170dp"
        android:layout_marginBottom="5dp"
        android:background="#0F0B13" />

</RelativeLayout>