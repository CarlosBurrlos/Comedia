<!--        android:layout_marginTop="292dp"-->
<!--        android:layout_marginBottom="49dp" />-->

    <Button
        android:id="@+id/btnViewSavedPosts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="114dp"
        android:layout_marginTop="338dp"
        android:text="View Saved Posts" />

    <Button
        android:id="@+id/btnBrowseGenre"
        android:layout_width="148dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="124dp"
        android:layout_marginTop="389dp"
        android:layout_marginEnd="137dp"
        android:text="Follow Genre" />

    <Button
        android:id="@+id/btnBrowseUser"
        android:layout_width="143dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="440dp"
        android:layout_marginEnd="131dp"
        android:text="Find User" />

    <Button
        android:id="@+id/btnViewSavedGenres"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="110dp"
        android:layout_marginTop="228dp"
        android:text="Genres Following" />

    <Button
        android:id="@+id/btnViewFollowing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="116dp"
        android:layout_marginTop="281dp"
        android:text="Users Following" />

    <Button
        android:id="@+id/btnDeleteAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="504dp"
        android:layout_marginEnd="82dp"
        android:text="Delete" />

    <Button
        android:id="@+id/btnToLoginPage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="506dp"
        android:layout_marginEnd="239dp"
        android:text="Login" />

    <Button
        android:id="@+id/btnViewSelfProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="175dp"
        android:layout_marginEnd="117dp"
        android:text="View Full Profile"
        android:textSize="16sp"
        android:textStyle="bold" />
